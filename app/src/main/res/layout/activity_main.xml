<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonSave"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francesco.speseprova.MainActivity">

    <EditText
        android:id="@+id/textImporto"
        android:layout_width="100dp"
        android:layout_height="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:onClick="emptyImporto"
        android:text="@string/textImporto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textData"
        android:onClick="emptyData"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:text="data"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintLeft_toRightOf="@+id/textImporto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />/>

    <EditText
        android:id="@+id/textType"
        android:onClick="emptyDescription"
        android:layout_width="114dp"
        android:layout_height="52dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:text="descrizione"
        app:layout_constraintLeft_toRightOf="@+id/textData"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        />


    <Button
        android:id="@+id/buttonSalva"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginTop="37dp"
        android:onClick="saveValue"
        android:text="@string/buttonSalva"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textImporto" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="305dp"
        android:layout_height="241dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Valori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSalva"
        app:layout_constraintVertical_bias="0.833"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="250dp" />

</android.support.constraint.ConstraintLayout>
