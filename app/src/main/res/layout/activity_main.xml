<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonSave"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francesco.speseprova.MainActivity">

    <EditText
        android:id="@+id/textImporto"
        android:layout_width="114dp"
        android:layout_height="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:onClick="empty"
        android:text="@string/textImporto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/textData"
        android:layout_width="114dp"
        android:layout_height="52dp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="135dp"
        android:text="data"/>
    <EditText
        android:id="@+id/textType"
        android:layout_width="114dp"
        android:layout_height="52dp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="254dp"
        android:text="descrizione"/>


    <Button
        android:id="@+id/buttonSalva"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:onClick="saveValue"
        android:text="@string/buttonSalva"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textImporto" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="196dp"
        android:layout_height="68dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="debug"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSalva" />
</android.support.constraint.ConstraintLayout>
